<Window x:Class="UI.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:my="clr-namespace:UI"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"        
        Title="INSAWars" WindowStartupLocation="CenterScreen" Height="768" Width="975" ResizeMode="NoResize" FocusManager.FocusedElement="{Binding ElementName=_gameView}">
    <Grid>        
        <my:GameView x:Name="_gameView" Focusable="True" FocusVisualStyle="{x:Null}"></my:GameView>        
    </Grid>
</Window>
