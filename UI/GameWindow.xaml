<Window x:Class="UI.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:my="clr-namespace:UI"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"        
        Title="INSAWars" WindowStartupLocation="CenterScreen" Height="768" Width="975" ResizeMode="NoResize" FocusManager.FocusedElement="{Binding ElementName=_gameControl}">
    
    <Window.Resources>
        <BitmapImage x:Key="Plain" UriSource="./Resources/textures/plain.png" />
        <BitmapImage x:Key="Water" UriSource="./Resources/textures/water.png" />
        <BitmapImage x:Key="Desert" UriSource="./Resources/textures/desert.png" />
        <BitmapImage x:Key="Mountain" UriSource="./Resources/textures/mountain.png" />

        <BitmapImage x:Key="FoodSmall" UriSource="./Resources/icons/16x16/food.png" />
        <BitmapImage x:Key="FoodBig" UriSource="./Resources/icons/32x32/food.png" />
        <BitmapImage x:Key="IronSmall" UriSource="./Resources/icons/16x16/iron.png" />
        <BitmapImage x:Key="IronBig" UriSource="./Resources/icons/32x32/iron.png" />

        <BitmapImage x:Key="CitySmall" UriSource="./Resources/icons/16x16/city.png" />
        <BitmapImage x:Key="CityBig" UriSource="./Resources/icons/32x32/city.png" />

        <BitmapImage x:Key="BossSmall" UriSource="./Resources/icons/16x16/boss.png" />
        <BitmapImage x:Key="BossBig" UriSource="./Resources/icons/32x32/boss.png" />
        <BitmapImage x:Key="StudentSmall" UriSource="./Resources/icons/16x16/student.png" />
        <BitmapImage x:Key="StudentBig" UriSource="./Resources/icons/32x32/student.png" />
        <BitmapImage x:Key="TeacherSmall" UriSource="./Resources/icons/16x16/teacher.png" />
        <BitmapImage x:Key="TeacherBig" UriSource="./Resources/icons/32x32/teacher.png" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="576"/>
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="23*"/>
                <ColumnDefinition Width="241*"/>
                <ColumnDefinition Width="59*"/>
            </Grid.ColumnDefinitions>
            <Grid.Background>
                <ImageBrush ImageSource=".\Resources\ui\top-menu-background.png" />
            </Grid.Background>
            
            <Label Focusable="False" Grid.Column="1" Name="_turnLabel" Content="{Binding Turns}" VerticalAlignment="Center" FontFamily="Charlemagne Std" Foreground="White" Height="24" />
            <Label Focusable="False" Grid.Column="0" Name="_clock" Content="{Binding Clock}" VerticalAlignment="Center" FontFamily="Charlemagne Std" Foreground="White" Height="24" />

            <Button Grid.Column="2" Click="NextTurnClick" Content="Next turn" Focusable="False" VerticalAlignment="Center" Style="{StaticResource menuStyle}" FontSize="14" HorizontalAlignment="Right" Height="32"/>
        </Grid>

        <my:GameControl x:Name="_gameControl" Grid.Row="1" FocusVisualStyle="{x:Null}" Focusable="True" />

        <Grid Grid.Row="2">
            <Grid.Background>
                <ImageBrush ImageSource=".\Resources\ui\bot-menu-background.png" />
            </Grid.Background>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="157*"/>
                <ColumnDefinition Width="495*"/>
                <ColumnDefinition Width="317*"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Name="_playerInformation">
                <Label Content="{Binding Name}" FontFamily="Charlemagne STD" FontSize="18" Margin="10" Foreground="#FFEEEEEE" />
                <StackPanel Orientation="Horizontal" Margin="10, 0, 10, 10">
                    <Image Source="{StaticResource CitySmall}" Width="16" Height="16" />
                    <Label Content="{Binding CitiesCount}"  FontFamily="Charlemagne STD" FontSize="18" Foreground="#FFEEEEEE" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="10, 0, 10, 10">
                    <Image Source="{StaticResource BossSmall}" Width="16" Height="16" />
                    <Label Content="{Binding HeadCount}"  FontFamily="Charlemagne STD" FontSize="18" Foreground="#FFEEEEEE" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="10, 0, 10, 10">
                    <Image Source="{StaticResource TeacherSmall}" Width="16" Height="16" />
                    <Label Content="{Binding TeachersCount}"  FontFamily="Charlemagne STD" FontSize="18" Foreground="#FFEEEEEE" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="10, 0, 10, 10">
                    <Image Source="{StaticResource StudentSmall}" Width="16" Height="16" />
                    <Label Content="{Binding StudentsCount}"  FontFamily="Charlemagne STD" FontSize="18" Foreground="#FFEEEEEE" />
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
