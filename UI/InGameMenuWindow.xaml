<Window x:Class="UI.InGameMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InGameMenuWindow" ResizeMode="NoResize" WindowStyle="None" WindowStartupLocation="CenterScreen" Height="300" Width="300">
    <Window.Background>
        <ImageBrush ImageSource=".\Resources\ui\ingame-menu-background.png" Viewport="0,0,300,300"
        ViewportUnits="Absolute"
        TileMode="Tile"
        Stretch="None"
        AlignmentX="Left"
        AlignmentY="Top" ViewboxUnits="RelativeToBoundingBox"/>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="79*"/>
            <RowDefinition Height="191*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1">
            <Button x:Name="_newGame" Content="Back to main menu" Style="{StaticResource menuStyle}" FontSize="18" Click="NewGameButtonClick" />
            <Button x:Name="_saveGame" Content="Save game" Style="{StaticResource menuStyle}" FontSize="18" Click="SaveGameButtonClick" Margin="10" />
            <Button x:Name="_exit" Content="Exit" Style="{StaticResource menuStyle}" FontSize="18" Click="ExitButtonClick" Margin="10" />
        </StackPanel>
    </Grid>
    
</Window>
