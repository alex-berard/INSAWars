<Window x:Class="UI.LoadErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InGameMenuWindow" ResizeMode="NoResize" WindowStyle="None" WindowStartupLocation="CenterScreen" Height="300" Width="300">
    <Window.Background>
        <ImageBrush ImageSource=".\Resources\ui\error-menu-background.png" Viewport="0,0,300,300"
        ViewportUnits="Absolute"
        TileMode="Tile"
        Stretch="None"
        AlignmentX="Left"
        AlignmentY="Top" ViewboxUnits="RelativeToBoundingBox"/>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="79*"/>
            <RowDefinition Height="191*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1">
            <Label Content="The file could not be found." HorizontalAlignment="Center" FontSize="14" Foreground="#FF9C9C8F" FontFamily="Charlemagne Std" Height="80"/>
            <Button Content="Back" Style="{StaticResource menuStyle}" FontSize="18" Click="BackClicked" Margin="10" />
        </StackPanel>
    </Grid>

</Window>
